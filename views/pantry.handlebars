<!doctype html>

<html>
<head>
  <title>Pantry</title>
  <meta charset='utf-8'>
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">

  {{> standard_css}}
</head>
<body>

  <div>
    {{!-- Data targets  --}}
    {{> sidebar}}
    {{> item_modal}}
    {{> share_modal}}
    {{> pantry_modal}}

    <div id="header">
      <a href="#menu"></a>
      {{pantry_name}}
      <a class="right" href="#" data-toggle="modal" data-target="#{{page}}Modal"></a>
    </div>

    <div class="container">
      {{> control}}
      <div class="items-wrapper">
        {{#each items}}
          {{> item}}
        {{/each}}
      </div>
    </div>

    <div id="footer">
      <a href="/pantry/{{id}}/{{next_pantry_order}}">
        Sort by: <i>{{pantry_order}}</i>
      </a>
      <a href="#" class="right">
        <span id="edit">Edit</span>
      </a>
    </div>
  </div>

  {{> standard_js}}
  <script type="text/javascript" src="/js/pantry.js"></script>
</body>

</html>