<!doctype html>

<html>
<head>
  <title>Pantry</title>  
  <meta charset='utf-8'>
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
  
  {{> standard_css}}
  <link href='/css/pantry.css' rel='stylesheet'>
  <link rel="stylesheet" href="/css/footer.css">


  <!-- Scripts for fonts -->
  <script type="text/javascript" src="//use.typekit.net/vka4voo.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>    
</head>
<body>
  <div class='container'>
    {{> share_modal}}
    {{> item_modal}}
    {{> navbar}}  
    <div id="control" class="row">
      <div class="btn-group btn-group-justified">
        <a href=' /pantry/{{id}}/{{pantry_order}}' class="btn btn-default" role="button">
          <span class="glphyicon glphyicon-cutlery"></span> Pantry
        </a>
        <a href='/shopping_list/{{id}}/{{shopping_list_order}}' class="btn btn-default" role="button">
          <span class="glphyicon glphyicon-shopping-cart"> Grocery List</span>
        </a>
      </div>
    </div>
    <div class='row'>
      <div class='btn-group'>
        <button class='btn btn-default btn-md dropdown-toggle' id='sort-btn' type='button' data-toggle='dropdown'>
          Sort<span class='caret'></span>
        </button>

        <ul class='dropdown-menu'>
          <li><a href='/pantry/{{id}}/Name'>Name</a></li>
          <li><a href='/pantry/{{id}}/Category'>Category</a></li>
          <li><a href='/pantry/{{id}}/Expiration'>Expiration</a></li>
        </ul>
      </div>

      <button id='btn-edit'>Edit</button>
    </div>


    {{#each items}}
      {{> item}}
    {{/each}}

    {{> footer_pantry}}

  {{!-- > navbar --}}

  </div> {{!-- End of container --}}
  {{> standard_js}}
  <script src="/js/pantry.js"></script>
</body>
</html>