<!doctype html>

<html>
<head>
  <title>Pantry</title>
  <meta charset='utf-8'>
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
  {{> standard_css}}
  {{> standard_js}}
  <link href='/css/pantry.css' rel='stylesheet'>
  <link rel="stylesheet" href="/css/footer.css">


</head>
<body>

  <div>
    {{!-- Data targets  --}}
    {{> sidebar}}
    {{> item_modal}}
    {{> share_modal}}
    {{> pantry_modal}}

    <div id="data" hidden="true">{{in_my_pantries}}</div>

    <div id="header">
      <a href="#menu"></a>
      {{pantry_name}}
      <a class="right" href="#" data-toggle="modal" data-target="#itemModal"></a>
    </div>
  
    {{> control}}
  
    <div class="container container-content">
      {{#each items}}
        {{> item}}
      {{/each}}
    </div>

    <div id="footer">
      <a href="/pantry/{{id}}/{{next_pantry_order}}">
        Sort by: <i>{{pantry_order}}</i>
      </a>
      <a href="#" class="right">
        <span id="edit">Edit</span>
      </a>
    </div>
  </div>

  <script type="text/javascript" src="/js/pantry.js"></script>
</body>

</html>