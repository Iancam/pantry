<body>
  <div class='container'>
    {{> share_modal}}
    {{> item_modal}}
    
    <div class='row' id='header'>
      
      {{> user_dropdown}}
      <h2>Pantry</h2>
      <a href="#" data-toggle="modal" data-target="#itemModal"><span class='glyphicon glyphicon-plus'></span></a>
    </div>
    
    
    <div class='row' id='sort'>
      <div class='btn-group'>
        <button class='btn btn-default btn-md dropdown-toggle' id='sort-btn' type='button' data-toggle='dropdown'>
          Sort<span class='caret'></span>
        </button>

        <ul class='dropdown-menu'>
          <li><a href='/pantry/{{id}}/Name'>Name</a></li>
          <li><a href='/pantry/{{id}}/Category'>Category</a></li>
          <li><a href='/pantry/{{id}}/Expiration'>Expiration</a></li>
        </ul>
      </div>

      <button id='btn-edit'>Edit</button>
    </div>

    {{#each items}}
      {{> item}}
    {{/each}}

  {{> navbar}}

  </div> {{!-- End of container --}}

  <script src='https://code.jquery.com/jquery.js'></script>
