<!doctype html>

<html>
<head>
  <title>Pantry</title>
  <meta charset='utf-8'>
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">

  <link type="text/css" rel="stylesheet" href="/css/pantry_test.css">
  <link type="text/css" rel="stylesheet" href="/css/bootstrap.min.css">
  <link type="text/css" rel="stylesheet" media="all" href="/css/jquery.mmenu.all.css">
  <script type="text/javascript" src="https://code.jquery.com/jquery.js"></script>
  <script type="text/javascript" src="/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="/js/jquery.mmenu.min.all.js"></script>
  <script type="text/javascript">
    $(function () {
      $("nav#menu").mmenu();
    });
  </script>
  <script type="text/javascript" src="/js/pantry.js"></script>
</head>
<body>

  <div>
    {{!--   Menu data target --}}  
    {{> sidebar}}
    {{!-- Add item data target --}}
    {{> item_modal}}
    {{!-- Share data target  --}}
    {{> share_modal}}

    <div id="header">
      <a href="#menu"></a>
      {{pantry_name}}
      <a class="right" href="#" data-toggle="modal" data-target="#{{page}}Modal"></a>
    </div>

    <div class="container">
      {{> control}}
      <div class="items-wrapper">
        {{#each items}}
          {{> item}}
        {{/each}}
      </div>
    </div>

    <div id="footer">
      <a href="/pantry/{{id}}/{{next_pantry_order}}">
        Sort by: <i>{{pantry_order}}</i>
      </a>
      <a href="#" class="right">
        Edit
      </a>
    </div>
  </div>
</body>

</html>