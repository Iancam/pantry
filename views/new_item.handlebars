<!doctype html>

<html>
<head>
  <title>Pantry</title>  
  <meta charset='utf-8'>
  {{!-- Disable Zooming --}}
  <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' />
  
  <link href='/css/bootstrap.min.css' rel='stylesheet'>
  <link href='/css/bootstrap-theme.min.css' rel='stylesheet'>
  <link href='/css/navbar.css' rel='stylesheet'>
  <link href='/css/datepicker.css' rel='stylesheet'>


  <!-- Scripts for fonts -->
  <script type='text/javascript' src='//use.typekit.net/vka4voo.js'></script>
  <script type='text/javascript'>try{Typekit.load();}catch(e){}</script>
  <!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js'></script>
      <script src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js'></script>
    <![endif]-->        
</head>

<body>
  <div class='container'>

    <form role='form' method='post' action='/create_item'>
      <div class='form-group'>
        <label for='name'>Name</label>
        <input type='text' class='form-control' id='name' placeholder='Yogurt' name='name'>
      </div>

      <div class='form-group'>
        <label for='category'>Category</label>
          <select class='form-control' name='category'>
            <option>Fruits</option>
            <option>Vegetables</option>
            <option>Grains</option>
            <option>Protein</option>
            <option>Dairy</option>
            <option>Snacks</option>
          </select>
      </div>

      <div class="form-group row">
        <div class="col-xs-8">
          <label class="control-label">Effective Date</label>
          <div class="input-group date" id="datepicker" data-date="" data-date-format="mm/dd/yyyy">
            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
            <input class="form-control" id='datepicker-text' type="text" readonly="" value="">
          </div>
        </div>
      </div>

      <button type='submit' class='btn btn-primary'>Submit</button>
    </form>

    {{> navbar}}
  </div>


  <script src='https://code.jquery.com/jquery.js'></script>
  <script src='/js/bootstrap.min.js'></script>
  <script src='/js/bootstrap-datepicker.js'></script>
  <script>
    var today = new Date();
    $('#datepicker-text').attr('value', today.toLocaleDateString());
    $('.input-group.date').attr('data-date', today.toLocaleDateString());
    $(".input-group.date").datepicker({ autoclose: true, 
                                   todayHighlight: true,
                                        startDate: today});
  </script>
</body>
</html>