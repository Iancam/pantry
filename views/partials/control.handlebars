{{!-- control.handlebars --}}
<div id="control">
  <div class="btn-group btn-group-justified ">
    <a href="/pantry?id={{id}}&order={{pantry_order}}" id="btn-pantry" class="btn btn-default btn-control {{#if on_pantry}}active-control{{/if}}" role="button">
      Pantry
    </a>
    <a href="/shopping_list?id={{id}}&order={{shopping_list_order}}" id="btn-shopping-list" class="btn btn-default btn-control {{#if on_shopping_list}}active-control{{/if}}" role="button">
      Grocery List
    </a>
    <a href="/recipe_welcome?id={{id}}" id="btn-recipes" class="btn btn-default btn-control {{#if on_recipe}}active-control{{/if}}">
      Recipes
    </a>
  </div>
</div>