<!doctype html>

<html>
<head>
  <title>Pantry</title>  
  <meta charset='utf-8'>
  <meta name='viewport' content='width=device-width, initial-scale=1.0'>
  <link href='/css/bootstrap.min.css' rel='stylesheet'>
  <link href='/css/bootstrap-theme.min.css' rel='stylesheet'>
  <link href='/css/shopping_list.css' rel='stylesheet' >
  <link href='/css/navbar.css' rel='stylesheet'>

  <!-- Scripts for fonts -->
  <script type="text/javascript" src="//use.typekit.net/vka4voo.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js'></script>
      <script src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js'></script>
    <![endif]-->        
</head>

<body>
  <div class='container'>
    <div class='row' id='header'>
      <h2>Shopping List</h2>
      <span class='glyphicon glyphicon-plus'></span>
    </div>

    <div class='row' id='sort'>
      <h4>Sort by: <i>Likes</i></h4>
    </div>

    {{#each pantry.requests}}
      <div class='row request' id='{{_id}}'>
        <h3 class='request-name'>{{name}}</h3>
        <span class='glyphicon glyphicon-chevron-up'>{{likes}}</span>
        <h6 class='request-category'>{{category}}</h6>
      </div>
    {{/each}}

    <form method='post' action='/create_request'>
      Name: <input type='text' name='name'>
      Category: <input type='text' name='category'>
      <input type='submit' value='Submit'>
    </form>

    {{> navbar}}
  </div>


  <script src='https://code.jquery.com/jquery.js'></script>
  <script src='/js/bootstrap.min.js'></script>
  <script src='/js/shopping_list.js'></script>
</body>
</html>