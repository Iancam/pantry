<!doctype html>

<html>
<head>
  <title>Pantry</title>
  <meta charset='utf-8'>
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">

  {{> standard_css}}
  {{> standard_js}}
</head>
<body>

  <div>
    {{!-- Data targets  --}}
    {{> sidebar}}
    {{> request_modal}}
    {{> share_modal}}
    {{> pantry_modal}}

    <div id="header">
      <a href="#menu"></a>
      {{pantry_name}}
      <a class="right" href="#" data-toggle="modal" data-target="#{{page}}Modal"></a>
    </div>

    {{> control}}
    <div class="container container-content">
      {{#each requests}}
        {{> request}}
      {{/each}}
    </div>

    <div id="footer">
      <a href="/shopping_list/{{id}}/{{next_shopping_list_order}}">
        Sort by: <i>{{shopping_list_order}}</i>
      </a>
      <a href="#" class="right">
        <span id="edit">Edit</span>
      </a>
    </div>
  </div>


  <script type="text/javascript" src="/js/shopping_list.js"></script>
</body>

</html>