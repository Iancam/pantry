<!doctype html>

<html>
<head>
  <title>Pantry</title>  
  <meta charset='utf-8'>
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name='viewport' content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
  
  {{> standard_css}}
  <link href='/css/shopping_list.css' rel='stylesheet' >
  <link rel="stylesheet" href="/css/jquery.mmenu.all.css" rel="stylesheet">

  <!-- Scripts for fonts -->
  <script type='text/javascript' src='//use.typekit.net/vka4voo.js'></script>
  <script type='text/javascript'>try{Typekit.load();}catch(e){}</script>
  <!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js'></script>
      <script src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js'></script>
    <![endif]-->        
</head>

<body>
  <div class='container'>
    {{> share_modal}}
    {{> request_modal}}
    <div class='row' id='header'>
      {{!-- <a id="open-icon-header" href="#menu"></a> --}}
      {{> user_dropdown}}
      <h2>Shopping List</h2>
      <a href="#" data-toggle='modal' data-target='#requestModal'><span class='glyphicon glyphicon-plus'></span></a>
    </div>

    <div class='row' id='sort'>
      <div class='btn-group'>
        <button class='btn btn-default btn-md dropdown-toggle' id='sort-btn' type='button' data-toggle='dropdown'>
          Sort<span class='caret'></span>
        </button>

        <ul class='dropdown-menu'>
          <li><a href='/shopping_list/{{id}}/Name'>Name</a></li>
          <li><a href='/shopping_list/{{id}}/Category'>Category</a></li>
          <li><a href='/shopping_list/{{id}}/Likes'>Likes</a></li>
        </ul>
      </div>

      <button id='btn-edit'>Edit</button>
    </div>
    
    {{#each requests}}
      {{> request}}
    {{/each}}

    {{> navbar}}
  </div>
  {{!-- {{> sidebar}} --}}

  {{> standard_js}}
  <script src='/js/shopping_list.js'></script>
  
</body>
</html>